<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/person"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/person"
            android:fontFamily="sans-serif-black"
            android:text="Islam Ragab"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/time"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  wednesday - 18:40 PM"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_watch"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/person"
            />
    <ImageView
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:src="@drawable/good"
        android:layout_alignParentEnd="true"
        />

        <View
            android:id="@+id/delemter"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/time"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="25dp"
            android:background="#656161" />

        <TextView
            android:id="@+id/contentt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/any"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="5dp"
            android:layout_below="@+id/delemter"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:id="@+id/likepost"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/contentt"
            android:layout_alignParentStart="true"
            />


        <ImageView
            android:id="@+id/commentpost"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/contentt"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="89dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/textView"
            android:layout_toEndOf="@+id/likepost"
            android:src="@drawable/message" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/contentt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:drawableStart="@drawable/ic_share"
            android:text="  Share"
            android:textColor="#3995DF" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
